{
	"name": "pocketlib",
	"version": "1.6.0",
	"scripts": {
		"ng": "ng",
		"start": "cd dist && node server.js",
		"dev": "concurrently 'npm:ng:build:watch' 'npm:server:compile' 'npm:server:copy:watch' 'npm:server:copy2:watch' 'npm:server:watch'",
		"build": "npm run build:prod",
		"build:prod": "npm run clear && npm run npm:install && npm run ng:build:prod && npm run server:compile && npm run server:copy",
		"build:staging": "npm run clear && npm run npm:install && npm run ng:build:staging && npm run server:compile && npm run server:copy",
		"clear": "rm -rf dist && rm -rf server/dist",
		"npm:install": "npm install && npm --prefix ./server/ install ./server/",
		"ng:build:watch": "ng build --watch",
		"ng:build:prod": "ng build --configuration production",
		"ng:build:staging": "ng build --configuration staging",
		"server:compile": "( cd server/ ; tsc )",
		"server:copy": "cpx 'server/{package.json,package-lock.json,web.config,node_modules/**/*}' dist/ && cpx 'server/dist/**/*' dist/",
		"server:copy:watch": "cpx 'server/{package.json,package-lock.json,web.config,node_modules/**/*}' dist/ -w",
		"server:copy2:watch": "cpx 'server/dist/**/*' dist/ -w",
		"server:watch": "cd dist && nodemon server.js",
		"lint": "ng lint"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^18.2.7",
		"@angular/cdk": "^18.2.8",
		"@angular/common": "^18.2.7",
		"@angular/compiler": "^18.2.7",
		"@angular/core": "^18.2.7",
		"@angular/forms": "^18.2.7",
		"@angular/localize": "^18.2.7",
		"@angular/platform-browser": "^18.2.7",
		"@angular/platform-browser-dynamic": "^18.2.7",
		"@angular/router": "^18.2.7",
		"@angular/service-worker": "^18.2.7",
		"@apollo/client": "^3.11.8",
		"@babel/compat-data": "^7.10.3",
		"@fortawesome/angular-fontawesome": "^0.15.0",
		"@fortawesome/fontawesome-svg-core": "^6.6.0",
		"@fortawesome/free-brands-svg-icons": "^6.6.0",
		"@fortawesome/free-solid-svg-icons": "^6.6.0",
		"@fortawesome/pro-light-svg-icons": "^6.6.0",
		"@fortawesome/pro-regular-svg-icons": "^6.6.0",
		"apollo-angular": "^7.2.0",
		"axios": "^1.7.7",
		"core-js": "^3.16.0",
		"cropperjs": "^1.6.2",
		"dav-js": "git+https://github.com/dav-apps/dav-js.git#v2.7.3",
		"dav-ui-components": "git+https://github.com/dav-apps/dav-ui-components.git#v1.5",
		"express": "^4.18.2",
		"graphql": "^16.9.0",
		"http": "0.0.0",
		"jszip": "^3.10.1",
		"localforage": "^1.10.0",
		"ng2-dragula": "^5.1.0",
		"ng2-pdf-viewer": "^10.3.2",
		"ngx-file-helpers": "^12.0.0",
		"pocketlib-server": "file:server",
		"rxjs": "^7.8.1",
		"tslib": "^2.6.2",
		"zone.js": "^0.14.10"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^18.2.8",
		"@angular-devkit/core": "^18.2.8",
		"@angular-devkit/schematics": "^18.2.8",
		"@angular/cli": "^18.2.8",
		"@angular/compiler-cli": "^18.2.7",
		"@angular/language-service": "^18.2.7",
		"@types/node": "^18.17.16",
		"codelyzer": "^6.0.0",
		"concurrently": "^8.2.1",
		"cpx": "^1.5.0",
		"nodemon": "^3.0.1",
		"ts-node": "^10.9.1",
		"tslint": "^6.1.3",
		"typescript": "^5.4.5"
	},
	"overrides": {
		"ng2-dragula": {
			"@types/dragula": "^3.7.3",
			"@angular/animations": "^18.2.7",
			"@angular/common": "^18.2.7",
			"@angular/core": "^18.2.7"
		}
	}
}